@model IEnumerable<project.Models.drugsupplier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<h2 style="text-align:center">Medication Suppliers</h2>

<a href="@Url.Action("Create", "DrugSupplier")">
    <h4 style="text-align:center" class="text-success">Add New Supplier </h4>
</a>
<table class="table" style="text-align:center">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.SupplierName)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SupplierID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SupplierID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SupplierID })
        </td>

    </tr>
}
  

</table>
<p style="text-align:right"><a class="btn btn-primary btn-lg round" onclick=@Html.ActionLink("Back","Suppliers", "DrugSupplier")</a></p>