@model project.Models.lamb

@{
    ViewBag.Title = "EEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 style="text-align:center">Edit Lamb Record</h2>

@using (Html.BeginForm())
{
    //@Html.AntiForgeryToken()
    <div class="container">
        <form class="form-horizontal">
            <h4 style="text-align:center">Update details below</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.LambID)
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Lamb Tag Number
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TagNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TagNo, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Date Of Birth
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Breed
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Breed, new SelectList(Model.BreedCollection, "Breed1", "Breed1"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.Breed, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.Sex)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Sex, new List<SelectListItem>
           {
               new SelectListItem {Text = "Female", Value = "Female" },
               new SelectListItem {Text = "Male", Value = "Male" }

           }, new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Mother Ewe Tag Number
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.sheeptag, new SelectList(Model.SheepCollection, "sheeptag", "sheeptag"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.sheeptag, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Lamb Phase
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.ResultDes, new SelectList(Model.ResultCollection, "Description", "Description"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.ResultDes, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.FinishWeight)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.FinishWeight, new List<SelectListItem>
           {
               new SelectListItem {Text = "N/A", Value = "N/A" },
               new SelectListItem {Text = "20KG", Value = "20KG" },
               new SelectListItem {Text = "21KG", Value = "21KG" },
               new SelectListItem {Text = "22KG", Value = "22KG" },
               new SelectListItem {Text = "23KG", Value = "23KG" },
               new SelectListItem {Text = "25KG", Value = "25KG" },
               new SelectListItem {Text = "25KG", Value = "25KG" }

           }, new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.FinishWeight, "", new { @class = "text-danger" })
                </div>
                <br /><br />
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-4">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}