        <h5>
            <label>
                @Html.DisplayNameFor(model => model.TagNo)
            </label>
        </h5>
        <div>
            @Html.DisplayFor(model => model.TagNo)
        </div>
        <h5>
            <label>
                @Html.DisplayNameFor(model => model.Date)
            </label>
        </h5>
        <div>
            @Html.DisplayFor(model => model.Date)
        </div>
        <h5>
            <label>
                @Html.DisplayNameFor(model => model.Name)
            </label>
        </h5>
        <div>
            @Html.DisplayFor(model => model.Name)
        </div>
        <h5>
            <label>
                @Html.DisplayNameFor(model => model.Issue)
            </label>
        </h5>
        <div>
            @Html.DisplayFor(model => model.Issue)
        </div>

        <h5>
            <label>
                @Html.DisplayNameFor(model => model.Dosage)
            </label>
        </h5>
        <div>
            @Html.DisplayFor(model => model.Dosage)
