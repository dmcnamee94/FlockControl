@model project.Models.lambmed

@{
    ViewBag.Title = "EEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<h2 style="text-align:center">Edit Lamb Medical Record</h2>

@using (Html.BeginForm())
{
    // @Html.AntiForgeryToken()
    <div class="container">
        <form class="form-horizontal">
            <h4 style="text-align:center">Update details below</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MedID)
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Lamb Tag Number
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.TagNo, new SelectList(Model.LambCollection, "TagNo", "TagNo"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.TagNo, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Date Treated
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Issue
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Issue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Issue, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Drug Given
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Name, new SelectList(Model.DrugCollection, "Name", "Name"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        Amount Given
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Dosage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dosage, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-4">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EIndex")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}