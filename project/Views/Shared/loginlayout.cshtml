<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="~/img/addresslogo.png" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FlockControl</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Portal", "Index", "Portal", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="~/Views/Sheep/Index.cshtml" class="dropdown-toggle" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">My Flock<span class="caret"></span></a>
                        <ul class="dropdown-menu" style="background-color:#cccccc">
                            <li>@Html.ActionLink(" Sheep", "Index", "Sheep")</li>
                            <li>@Html.ActionLink(" Lambs", "Index", "Lamb")</li>
                            <li>@Html.ActionLink(" Breeds", "Index", "Breed")</li>
                        </ul>
                    </li>


                    <li>@Html.ActionLink("Medical Records", "menu", "Medication")</li>
                    <li>@Html.ActionLink("Feeding", "Index", "Meal")</li>
                    <li>@Html.ActionLink("Drug Records", "Index", "Drug")</li>
                    <li>@Html.ActionLink("Movements", "Index", "Movement")</li>
                    <li>@Html.ActionLink("Contacts", "Suppliers", "DrugSupplier")</li>


                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Hello " + @Session["firstname"].ToString() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li>
                        <a href="@Url.Action("LogOut", "Login")">LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <img src="~/img/logooo.jpg" style="display:block ; margin-left:auto; margin-right:auto; background-color:#FFFFFF"><br />
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FlockControl</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
