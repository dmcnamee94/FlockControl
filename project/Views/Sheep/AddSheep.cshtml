@model project.Models.createsheep


@using (Html.BeginForm("AddSheep", "Sheep", FormMethod.Post, new { id = "form-addsheep", @class = "full-form" }))
{
    // @Html.AntiForgeryToken()

    <div class="container">
        <form class="form-horizontal">
            <h4 style="text-align:center" class="text-success">Enter Details</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.sheeptag)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.sheeptag, new { htmlAttributes = new { @class = "form-control", @Value = "" } } )
                    @Html.ValidationMessageFor(model => model.sheeptag, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.DOB)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.Breed)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Breed, ViewBag.ListofBreed as SelectList, "", new { @id = "DropDwnn", @class = "form-control", @Value = "" })
                    @Html.ValidationMessageFor(model => model.Breed, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.detail)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.detail, new List<SelectListItem>
           {
               new SelectListItem {Text = null, Value = null },
               new SelectListItem {Text = "Bred", Value = "Bred" },
               new SelectListItem {Text = "Bought", Value = "Bought" },
           }, new { style = "width:220px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.detail, "", new { @class = "text-danger", @Value = "" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.sex)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.sex, new List<SelectListItem>
           {
               new SelectListItem {Text = null, Value = null },
               new SelectListItem {Text = "Female", Value = "Female" },
               new SelectListItem {Text = "Male", Value = "Male" }

           }, new { style = "width:220px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.sex, "", new { @class = "text-danger", @Value = "" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.yearadded)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.yearadded, new List<SelectListItem>
           {
               new SelectListItem {Text = null, Value = null },
               new SelectListItem {Text = "2018", Value = "2018" },
               new SelectListItem {Text = "2017", Value = "2017" },
           }, new { style = "width:220px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.yearadded, "", new { @class = "text-danger", @Value = "" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-4">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
