@model project.Models.createsheep

@{
    ViewBag.Title = "EmployeeCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 style="text-align:center">New Sheep</h2>


@using (Html.BeginForm())
{
    // @Html.AntiForgeryToken()
    <div class="container">
        <form class="form-horizontal">
            <h4 style="text-align:center" class="text-success">Enter Details</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.sheeptag)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.sheeptag, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sheeptag, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.DOB)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.Breed)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Breed, new SelectList(Model.BreedCollection, "Breed1", "Breed1"), "Select", new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.Breed, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.detail)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.detail, new List<SelectListItem>
           {
               new SelectListItem {Text = "Bred", Value = "Bred" },
               new SelectListItem {Text = "Bought", Value = "Bought" },
           }, new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.detail, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.sex)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.sex, new List<SelectListItem>
           {
               new SelectListItem {Text = "Female", Value = "Female" },
               new SelectListItem {Text = "Male", Value = "Male" }

           }, new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.sex, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>

            <div class="form-group">
                <h4>
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.yearadded)
                    </label>
                </h4>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.yearadded, new List<SelectListItem>
           {
               new SelectListItem {Text = "2018", Value = "2018" },
               new SelectListItem {Text = "2017", Value = "2017" },
           }, new { style = "width:280px; height:30px;" })
                    @Html.ValidationMessageFor(model => model.yearadded, "", new { @class = "text-danger" })
                </div>
                <br /> <br />
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-4">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EmployeeIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
