@model IEnumerable<project.Models.usertable>

@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }

}

<h2 style="text-align:center">My Employees</h2>

<a href="@Url.Action("Create", "User")">
    <h4 style="text-align:center" class="text-success">Add New Employee </h4>
</a>
<table class="table" style="text-align:center">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.secondname)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secondname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.userid }) |
            @Html.ActionLink("Details", "Details", new { id=item.userid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.userid })
        </td>
    </tr>
}

</table>
